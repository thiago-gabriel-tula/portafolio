extends ../mostrar.pug

block contenido 
    header(class="w-full text-center py-11")
        h1(class="uppercase font-extrabold text-2xl color")= titulo
        
    div(class="w-auto flex justify-end flex-row py-7 mx-5")
        a(href="/admin/proyectos/agregar" class="sm:mr-10 block font-bold bg-indigo-500 hover:bg-indigo-700 text-white p-2 rounded-md") AÃ±adir Proyecto 
    
    //- pre= JSON.stringify(proyectos, undefined, 2)
    
    div(class="w-auto bg-white mx-5 px-3 py-3 shadow")
        if proyectos && proyectos.length
            ul(class="space-y-8")
                each proyecto in proyectos 
                    li(id=`${proyecto.id}` class="flex flex-col lg:flex-row w-auto justify-center h-auto bg-gray-100 py-5 px-3 rounded-lg")
                        div(class="mb-4 lg:mb-0 lg:w-1/3 rounded-lg overflow-hidden")
                            img(src=`${proyecto.image_url}`, alt="Imagen del proyecto")

                        div(class="mb-4 lg:mb-0 lg:w-1/3 relative")
                            h3(class="items-center h-auto text-center lg:absolute centrar-h3 font-bold color text-2xl")= proyecto.title

                        div(class="mb-4 lg:mb-0 lg:w-1/3 relative")  
                            div(class="lg:absolute lg:w-60 centrar-h3 space-y-2 px-4")
                                button(class=`w-full ${proyecto.publicado == true ? 'bg-green-100 border-green-600 text-green-600' : 'bg-yellow-100 border-yellow-600 text-yellow-600'}  border block font-bold px-3 rounded-sm btn-publicar`)= proyecto.publicado == true ? 'publicado' : 'No publicado'
                                button(class="w-full bg-blue-100 border-blue-600 text-blue-600 border block font-bold px-3 rounded-sm btn-editar") editar 
                                button(class="w-full bg-red-100 border-red-600 text-red-600 border block font-bold px-3 rounded-sm btn-eliminar") eliminar


        else 
            p(class="text-center my-5 font-bold text-black") No Hay Proyectos agregados

block script
    script(src="/js/botones.js")